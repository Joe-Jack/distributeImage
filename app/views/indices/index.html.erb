              <summary>個別サムネイル（解析度は落ちています。）</summary>
              <% index.pictures.reverse_order.each_with_index do |ip, inx| %>
                <%= image_tag ip.pic.to_s, class:"dragedanddroped", title: inx.to_s, draggable:"true" %>
              <% end %>
            </details>
            </td>
            
