<div class="container">
  
  <!--<%= notice %>-->
  
  <!--csv用の切替ボタン追加 20190125-->
  <button id="switch" class="btn btn-default">CSV~ノーマル</button>
  
  <h1 id="midashi">画像撮影一覧</h1>
  
  <div id="normalmode">
  <table class="table">
      <tr class="thread">
        <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1" scope="col">番号</th>
        <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1" scope="col">名前・項目</th>
        <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1" scope="col">総数</th>
        <th class="col-xs-2 col-sm-2 col-md-2 col-lg-2" scope="col">撮影</th>
        <th class="col-xs-4 col-sm-4 col-md-4 col-lg-4" scope="col">画像</th>
        <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1" scope="col">download</th>
        <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1" scope="col">編集</th>
        <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1" scope="col">削除</th>
      </tr>
  
    <tbody>
      <% @indices.each_with_index do |index, id| %>
        <% if index.parkname.blank? && index.playground.blank? %>
          <tr>
            <td><%= id+1 %></td>
            <td data-label="名前・項目"><%= index.name.to_s %></td>
              <td data-label="総数">
                <% if index.pictures.count != 0 %>
                  <%= index.pictures.count %>
                <% else %>
                  <%= "0" %>
                <% end %>
              </td>
              <td data-label="撮影">
                <%= link_to '撮影', new_user_index_picture_path(@user, index.id),data: {"turbolinks" => false} %>
              </td>
              <td data-label="画像" class="dropboxed" id="dp<%=index.id%>">
                <details>
                <summary>個別サムネイル（解析度は落ちています。）</summary>
                <% index.pictures.reverse_order.each_with_index do |ip, inx| %>
                  <%= image_tag ip.pic.to_s, class:"dragedanddroped", title: inx.to_s, draggable:"true" %>
                <% end %>
              </details>
              </td>
            
            <td data-label="download"><%= link_to 'download', download_user_index_path(@user, index.id), download:"",  class:"btn btn-default waku1" %></td>
            <td data-label="編集"><%= link_to '編集',  edit_user_index_path(@user, index.id), class:"btn btn-default waku" %></td>
            <td data-label="削除"><%= link_to '削除', user_index_path(@user, index.id), method: :delete, data: { confirm: '本当に削除しますか?' }, class:"btn btn-default waku" %></td>
          </tr>
        <% end %>
      <% end %>
      
    </tbody>
  </table>
  <br>
  
  <%= link_to '名前・項目の追加', new_user_index_path(@user), class:"btn btn-default" %>
  <br>
  <%= form_tag import_user_indices_path(@user), multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "csvファイルインポート", class: "btn btn-default"%>
  <% end %>
  </div>
  
  <div id="csvmode" style="display:none">
  <!--csvファイルをインポートするフォームを追加20190125-->
  <table class="table">
      <tr class="thread">
        <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1" scope="col">公園名</th>
        <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1" scope="col">遊具名</th>
        <th class="col-xs-4 col-sm-4 col-md-4 col-lg-4" scope="col">説明文</th>
        <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1" scope="col">撮影</th>
        <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3" scope="col">画像</th>
        <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1" scope="col">判定</th>
        <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1" scope="col">備考</th>
      </tr>
      <tbody>
      <% @indices.each_with_index do |index, id| %>
        <% if index.parkname.blank? == false && index.playground.blank? == false%>
          <tr>
            <!--<td><%= id+1 %></td>-->
            <td data-label="公園名"><%= index.parkname.to_s %></td>
            <td data-label="遊具名"><%= index.playground.to_s %></td>
            <td data-label="説明文"><%= index.explanation.to_s %></td>
            <td data-label="撮影">
              <%= link_to '撮影', new_user_index_picture_path(@user, index.id),data: {"turbolinks" => false} %>
            </td>
            <td data-label="画像" class="dropboxed" id="dp<%=index.id%>">
              <details>
                <summary>個別サムネイル（解析度は落ちています。）</summary>
                <% index.pictures.reverse_order.each_with_index do |ip, inx| %>
                  <%= image_tag ip.pic.to_s, class:"dragedanddroped", title: inx.to_s, draggable:"true" %>
                <% end %>
              </details>
            </td>
            <td data-label="判定"><%= index.judge.to_s %></td>
            <td data-label="備考"><%= index.remark.to_s %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
  </table>
  </div>
    
</div>